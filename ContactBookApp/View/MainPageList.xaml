<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactBookApp.View.MainPageList"
             xmlns:vm="clr-namespace:ContactBookApp.ViewModel"
             xmlns:model="clr-namespace:ContactBookApp.Model"
             x:DataType="vm:MainPageViewModel"
             Title="MainPageList">
    <Grid RowDefinitions="*, 10*"
          ColumnDefinitions="*"
          Padding="10">

        <Entry x:Name="searchentry"
               Placeholder="Search" />

        <ListView Grid.Row="1"
                  Margin="0,20"
                  HasUnevenRows="True"
                  ItemsSource="{Binding Contacts}">

            <ListView.ItemTemplate>

                <DataTemplate x:DataType="model:Contact">

                    <ViewCell>

                        <VerticalStackLayout>

                            <Border>

                                <Border.Shadow>

                                    <Shadow Radius="10"
                                            Brush="{AppThemeBinding Light={StaticResource DarkBackgroundColor}, Dark={StaticResource LightBackgroundColor}}" />

                                </Border.Shadow>

                                <Grid ColumnDefinitions="*,5*">

                                    <Image Source="{Binding ProfilePic}" />

                                    <StackLayout Orientation="Vertical"
                                                 Grid.Column="1">

                                        <Label Text="{Binding Name}"
                                               FontSize="Large" />

                                        <Label Text="{Binding PhoneNumber}"
                                               FontSize="Small" />

                                    </StackLayout>

                                </Grid>

                            </Border>

                        </VerticalStackLayout>
                        
                    </ViewCell>

                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>

    </Grid>
</ContentPage>